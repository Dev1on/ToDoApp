<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:textSize="24sp"
        android:layout_weight="1"
        android:layout_height="@android:dimen/app_icon_size" />
        <ImageButton
            android:id="@+id/contact_row_action_send"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/app_icon_size"
            android:src="@drawable/icon_send_48dp"
            android:background="@drawable/icon_send_48dp" />
        <ImageButton
            android:id="@+id/contact_row_action_delete"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/app_icon_size"
            android:src="@drawable/icon_trash_bin_48dp"
            android:background="@drawable/icon_trash_bin_48dp" />
</LinearLayout>